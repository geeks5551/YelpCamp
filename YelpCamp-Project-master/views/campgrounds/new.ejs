<%- include('../partials/header.ejs') %>
<div class="container">
    <div style="text-align: center;">
        <h1>Add a New Campground</h1>
    </div>
    <div class="mx-auto my-2" style="width: 50%;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Enter Campground Name</label>
                <input type="text" class="form-control" name="name" placeholder="Campground Name">
            </div>
            <div class="form-group">
                <label for="price">Enter Campground Price (per night)</label>
                <input type="number" class="form-control" name="price" placeholder="Price" min="1.00" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Enter Image URL</label>
                <input type="text" class="form-control" name="image" placeholder="Image URL">
            </div>
            <div>
                <label for="description">Add Campground Description</label>
                <!-- <input type="text" class="form-control" name="description" placeholder="Description"> -->
                <textarea name="description" style="width: 100%;" cols="22" rows="7"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>