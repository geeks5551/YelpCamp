<%- include('../partials/header.ejs') %>
<div class="container">
    <div style="text-align: center;">
        <h1>Edit Campground : <%= campground.name %></h1>
    </div>
    <div class="mx-auto my-2" style="width: 50%;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Campground Name</label>
                <input type="text" class="form-control" name="campground[name]" placeholder="Campground Name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="price">Enter Campground Price (per night)</label>
                <input type="number" class="form-control" name="campground[price]" placeholder="Price" min="1.00" step="0.01">
            </div>
            <div class="form-group">
                <label>Image URL</label>
                <input type="text" class="form-control" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
            </div>
            <div>
                <label>Campground Description</label>
                <textarea name="campground[description]" style="width: 100%;" cols="22" rows="7"><%- campground.description %></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>